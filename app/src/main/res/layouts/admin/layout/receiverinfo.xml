<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".admin.Addcargoreceiver">>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="20dp">
            <TextView
                    android:text="Receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView13"
                    android:layout_marginStart="30dp" android:textSize="24sp" android:layout_marginLeft="30dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp">
                <TextView
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:ems="8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="8"
                        android:id="@+id/addreceivername" android:hint="Name"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp">
                <TextView
                        android:text="Last Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView5" android:ems="8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="8"
                        android:id="@+id/addreceiverlastname" android:hint="Last Name"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp">
                <TextView
                        android:text="Adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView6" android:ems="8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="8"
                        android:id="@+id/addreceiveradress" android:hint="Adress"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp">
                <TextView
                        android:text="Province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView7" android:ems="8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="8"
                        android:id="@+id/addreceiverprovince" android:hint="Province"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp">
                <TextView
                        android:text="Distric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView8" android:ems="8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="8"
                        android:id="@+id/addreceiverdistric" android:hint="Distric"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp" android:id="@+id/testbutton123">
                <Button
                        android:text="Next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/nextcargoinfo" android:ems="8"
                        android:layout_marginTop="10dp" android:textAllCaps="false"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>