<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   tools:context=".admin.Addcargoinfo">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="20dp">
            <TextView
                    android:text="Cargo Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView13"
                    android:layout_marginStart="30dp" android:textSize="24sp" android:layout_marginLeft="30dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp">
                <TextView
                        android:text="Length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:ems="8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="8"
                        android:id="@+id/addlength" android:hint="Length"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp">
                <TextView
                        android:text="Width"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView5" android:ems="8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="8"
                        android:id="@+id/addwidth" android:hint="Width"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp">
                <TextView
                        android:text="Height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView6" android:ems="8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="8"
                        android:id="@+id/addheight" android:hint="Height"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp">
                <TextView
                        android:text="Price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView7" android:ems="8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="8"
                        android:id="@+id/addprice" android:hint="Price"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp">
                <Button
                        android:text="Add Cargo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/addcargo" android:textAllCaps="false"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>